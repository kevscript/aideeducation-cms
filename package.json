{
  "name": "cms",
  "description": "A blank template to get started with Payload",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "npm run copyfiles && npm run build:payload && npm run build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 'src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}' dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "lint": "npx eslint src",
    "lint:fix": "npx eslint --fix src",
    "format": "npx prettier --ignore-path .gitignore --write '**/*.{js,ts,jsx,tsx,json,mjs,cjs}'",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@payloadcms/bundler-vite": "^0.1.2",
    "@payloadcms/db-mongodb": "^1.0.0",
    "@payloadcms/richtext-lexical": "^0.1.8",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "payload": "^2.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^2.0.6",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.9.5"
  }
}
